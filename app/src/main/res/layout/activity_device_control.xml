<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DeviceControl">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="314dp"
        android:layout_height="430dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/wisoptlogo1" />

    <android.support.v7.widget.CardView
        android:id="@+id/open"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="288dp"
        android:focusable="true"
        app:cardBackgroundColor="#3d3e3e"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/lock_open"
                android:text="OPEN"
                android:textAlignment="center"
                android:textColor="#e8f0e5"
                android:textSize="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/close"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        app:cardBackgroundColor="#3d3e3e"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:text="CLOSE"
                android:textAlignment="center"
                android:textColor="#e8f0e5"
                android:textSize="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/disconnect"
        android:layout_width="210dp"

        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        app:cardBackgroundColor="#3d3e3e"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_bluetooth_disabled_black_24dp"
                android:text="DISCONNECT"
                android:textAlignment="center"
                android:textColor="#e8f0e5"
                android:textSize="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>